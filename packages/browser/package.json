{
  "private": false,
  "name": "@evervault/browser",
  "version": "2.3.0",
  "engines": {
    "node": "~18",
    "pnpm": "~7"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.es.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "lint": "prettier --check \"./**/*.js\"",
    "build": "vite build",
    "dev": "vite",
    "test-serve": "pnpm run test-serve:build && node ./e2e-app/server.mjs",
    "test-serve:build": "pnpm run build && cp -r ./dist/index.js ./e2e-app/evervault.bundle.js"
  },
  "license": "MIT",
  "dependencies": {
    "events": "^3.3.0"
  }
}
