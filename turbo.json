{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "EV_APP_UUID", "EV_API_KEY", "VITE_API_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env"],
      "dependsOn": ["^build"]
    },
    "e2e:test": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "format": {
      "outputs": ["lib/**", "*.[m][tj]s", "*.html", "*.json", "*.md"]
    },
    "format:check": {},
    "lint": {
      "dependsOn": ["typecheck"]
    },
    "lint:fix": {
      "dependsOn": ["^build", "format"],
      "outputs": ["lib/**", "*.ts"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "preview": {
      "dependsOn": ["build"]
    }
  }
}
