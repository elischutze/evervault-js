{
  "name": "@evervault/browser",
  "version": "2.3.0",
  "engines": {
    "node": "~18",
    "pnpm": "~7"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.es.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "lint": "prettier --check \"./**/*.js\"",
    "build": "vite build",
    "dev": "vite",
    "test-serve": "pnpm run test-serve:build && node ./e2e-app/server.mjs",
    "test-serve:build": "pnpm run build && cp -r ./dist/index.js ./e2e-app/evervault.bundle.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@evervault/sdk": "^3.10.1",
    "@peculiar/webcrypto": "^1.4.3",
    "@playwright/test": "^1.32.1",
    "@trust/webcrypto": "^0.9.2",
    "dotenv": "^16.0.3",
    "jsdom": "^21.1.1",
    "nock": "^13.3.0",
    "prettier": "^2.8.7",
    "serve-handler": "^6.1.5",
    "vite": "^4.2.1",
    "vitest": "^0.29.7",
    "web-file-polyfill": "^1.0.4"
  },
  "dependencies": {
    "events": "^3.3.0"
  }
}
