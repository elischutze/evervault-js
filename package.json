{
  "name": "@evervault/browser",
  "version": "2.3.0",
  "engines": {
    "node": ">=16 <=19",
    "pnpm": "~7"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.es.mjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "mocha",
    "lint": "prettier --check \"./**/*.js\"",
    "build": "vite build",
    "dev": "vite",
    "test-serve": "pnpm run test-serve:build && serve -p 3000 ./e2e-app",
    "test-serve:build": "pnpm run build && cp -r ./dist/index.js ./e2e-app/evervault.bundle.js"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.31.2",
    "dotenv": "^16.0.3",
    "jsdom": "^20.0.3",
    "mocha": "^10.2.0",
    "nock": "^13.3.0",
    "prettier": "^2.0.5",
    "web-file-polyfill": "^1.0.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "serve": "^14.2.0",
    "vite": "^4.2.1"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "events": "^3.3.0"
  }
}
